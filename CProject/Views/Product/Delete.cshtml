@model CProject.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить товар</h1>

<h3>Вы уверенны, что хотите удалить данную запись?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Наименование
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Фирма
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <button type="submit" class="btn btn-danger">Удалить</button> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>

</div>
