@model CProject.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Подробнее</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Наименование
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Количество
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            ID фирмы
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.Id)
        </dd>
        <dt class="col-sm-2">
            Номер секции
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SectionNumber)
        </dd>
        <dt class="col-sm-2">
            Номер ячейки
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CellNumber)
        </dd>
        <dt class="col-sm-2">
            Текущее состояние
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status.Name)
        </dd>
        <dt class="col-sm-2">
            Дата и время начала текущего состояния
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>