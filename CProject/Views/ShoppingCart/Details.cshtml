@model CProject.Models.ShoppingCart

@{
    ViewData["Title"] = "Details";
}

<h1>Подробнее</h1>

<div>
    <h4>Материал</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Наименование
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
           ID фирмы
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManufacturerId)
        </dd>
        <dt class = "col-sm-2">
           Номер секции
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SectionNumber)
        </dd>
        <dt class = "col-sm-2">
           Номер ячейки
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CellNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться</a>
</div>
