@model IEnumerable<CProject.Models.ShoppingCart>

@{
    ViewData["Title"] = "Index";
}

<h1>Материалы в корзине</h1>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SectionNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CellNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManufacturerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SectionNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CellNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufacturerId)
            </td>
            @if (User.IsInRole("Wholesaler") || User.IsInRole("Director"))
            {
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Информация</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить товар</a>
                    <form asp-action="СonfirmPurchase" method="post">
                        <button type="submit" class="btn btn-danger">Оформить заказ</button>
                    </form>
                </td>
            }
            </tr>

        }
        @*<form asp-action="СonfirmPurchase" method="post">
            <button type="submit" class="btn btn-danger">Оформить заказ</button>
        </form>*@
    </tbody>
</table>